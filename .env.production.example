
###### Basic app settings
NODE_ENV=production
LISTEN_HOST=0.0.0.0
LISTEN_PORT=8080
# SERVER_BASE_PATH=
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
TZ=UTC

# Database
# Directory where the database file will be stored
# Database filename is hardcoded as 'grand-publicador.db'
DATA_DIR="/data"

###### Configuration Injection
# These variables are injected into app-config.yaml on startup.
# They are not used directly by the application logic but are substituted into the configuration file.

# OPTIONAL: Telegram ID of the super administrator
TELEGRAM_ADMIN_ID=""

###### Authentication (Config Injection)
# MANDATORY: Change this to a long random string
JWT_SECRET="generate-a-very-long-and-secure-secret-here"
# MANDATORY: Token from @BotFather
TELEGRAM_BOT_TOKEN=""
